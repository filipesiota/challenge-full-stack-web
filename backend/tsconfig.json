{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@/test/*": ["./test/*"],
    },
    "types": [
      "vitest/globals"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
